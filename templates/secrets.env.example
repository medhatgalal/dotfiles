# ==============================================================================
# Secrets & Environment Variables Template
# ==============================================================================
# 1) Copy this file to ~/.secrets.env
# 2) Fill in values for your environment
# 3) Keep this file untracked and chmod 600
# ==============================================================================

# --- Identity ---
export USER_GOOGLE_EMAIL=""
export USER_FULL_NAME=""

# --- GitHub ---
export GITHUB_MCP_PAT=""
export GITHUB_TOKEN=""

# --- GitLab ---
# Canonical GitLab token used by all CLIs/MCP configs.
export GITLAB_TOKEN=""
# Optional write-capable token reserved for glab CLI operations.
export GLAB_WRITE=""
# Optional read-only GitLab token for MCP servers.
# Recommended scopes: read_api, read_repository, read_user, read_registry
export GITLAB_MCP_TOKEN=""
# Default GitLab host for glab CLI.
export GLAB_HOST="gitlab.appian-stratus.com"

# --- Jira ---
export JIRA_EMAIL=""
export JIRA_URL="https://your-org.atlassian.net"
export JIRA_TOKEN=""

# --- AI & Cloud ---
export CONTEXT7_API_KEY=""
export AWS_PROFILE=""
export AWS_REGION="us-east-1"
export GOOGLE_OAUTH_CLIENT_ID=""
export GOOGLE_OAUTH_CLIENT_SECRET=""

# --- MCP Images (optional overrides) ---
export JIRA_MCP_IMAGE="registry.gitlab.appian-stratus.com/appian/prod/jira-mcp-proxy/jira-mcp-proxy:latest"
export GITLAB_MCP_IMAGE="registry.gitlab.appian-stratus.com/appian/prod/gitlab-mcp-server/gitlab-mcp-server:latest"
export GITHUB_MCP_IMAGE="ghcr.io/github/github-mcp-server"
